<template id="bidding">
  <div class="page">

    <breadcrumbs>
      <template #path>
        <li class="breadcrumb-item">
          <a @click.prevent="toMain" href="#" data-t="">Main</a>
        </li>
        <li class="breadcrumb-item">
          <a @click.prevent="toMyItems" href="#" data-t="">My items</a>
        </li>
        <li class="breadcrumb-item">
          <a @click.prevent="onMyItem" href="#" data-t="meta">Item</a>
        </li>
        <li class="breadcrumb-item" data-t="meta">Bidding</li>
      </template>
    </breadcrumbs>

    <div class="loadable-container">
      <template v-if="!loading && id">

        <h1 data-t="meta">Bidding</h1>

        <div class="row mb-3">
          <div class="col-lg-2 col-md-4">
            <span data-t="meta">ID</span>
          </div>
          <div class="col-lg-10 col-md-8">
            {{id}}
          </div>
        </div>

        <div class="row mb-3">
          <div class="col-lg-2 col-md-4">
            <span data-t="meta">State</span>
          </div>
          <div class="col-lg-10 col-md-8">
            <span data-t="meta">{{stateTitle}}</span>
          </div>
        </div>

        <div class="row mb-3">
          <div class="col-lg-2 col-md-4">
            <span data-t="meta">Active</span>
          </div>
          <div class="col-lg-10 col-md-8">
            {{active | boolean}}
          </div>
        </div>

        <div class="row mb-3">
          <div class="col-lg-2 col-md-4">
            <span data-t="meta">Start date</span>
          </div>
          <div class="col-lg-10 col-md-8">
            {{startDate | datetime}}
          </div>
        </div>

        <div class="row mb-3">
          <div class="col-lg-2 col-md-4">
            <span data-t="meta">End date</span>
          </div>
          <div class="col-lg-10 col-md-8">
            <b>{{endDate | datetime}}</b>
          </div>
        </div>

        <div class="row mb-3">
          <div class="col-lg-2 col-md-4">
            <span data-t="meta">Starting value</span>
          </div>
          <div class="col-lg-10 col-md-8">
            {{startingValue | currency}}
          </div>
        </div>

        <div class="row mb-5">
          <div class="col-lg-2 col-md-4">
            <span data-t="meta">Bid step</span>
          </div>
          <div class="col-lg-10 col-md-8">
            {{bidStep | currency}}
          </div>
        </div>

        <bids :bidding="bidding"></bids>
      </template>

      <div v-if="loading" class="loader">
        <i class="fa fa-spinner fa-spin"></i>
      </div>
    </div>
  </div>
</template>