<template id="auctions">
    <div class="page">

        <breadcrumbs></breadcrumbs>

        <h1 data-t="">Active auctions</h1>

        <div class="loadable-container">

            <div class="bidding-list">
                <div class="row">
                    <div v-for="item of items" :key="item.id" class="col-md-6 col-lg-3">
                        <div class="mb-4">
                            <a v-if="item.picture" @click.prevent="toAuction(item.id)" href="#">
                                <img :src="item.picture" class="img-thumbnail img-fluid mb-3" alt="">
                            </a>
                            <h4 class="mb-3">
                                <a @click.prevent="toAuction(item.id)" href="#">{{item.name}}</a>
                            </h4>
                            <div>
                                <span data-t="meta">Start date</span>:
                                {{item.startDate | datetime}}
                            </div>
                            <div class="mt-1">
                                <span data-t="meta">End date</span>:
                                <b>{{item.endDate | datetime}}</b>
                            </div>
                            <div class="mt-3">
                                <span data-t="">Last bid</span>:
                                <b>{{item.lastBid | currency}}</b>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <pagination @change="load"></pagination>

            <div v-show="!loading && empty" class="alert-warning alert">
                <span data-t="">No auctions found</span>
            </div>

            <div v-show="loading" class="loader">
                <i class="fa fa-spinner fa-spin"></i>
            </div>
        </div>
    </div>
</template>